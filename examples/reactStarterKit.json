{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false
    },
    "extends": [
        "airbnb",
        "plugin:css-modules/recommended"
    ],
    "plugins": [
        "css-modules"
    ],
    "globals": {
        "__DEV__": true
    },
    "env": {
        "browser": true
    },
    "rules": {
        "import/extensions": [
            "error",
            "always",
            {
                "js": "never",
                "jsx": "never",
                "mjs": "never"
            }
        ],
        "import/no-extraneous-dependencies": 0,
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error",
                    "info"
                ]
            }
        ],
        "react/jsx-filename-extension": 0,
        "react/prefer-stateless-function": 0
    }
}
